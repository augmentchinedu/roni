{
  "steps": [
    {
      "name": "node:20",
      "entrypoint": "npm",
      "args": ["ci"]
    },
    {
      "name": "node:20",
      "entrypoint": "npm",
      "args": ["run", "build"],
      "env": [
        "CI=true",
        "NODE_ENV=production",
        "GCS_BUCKET=great-unknown.appspot.com"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gsutil -m rsync -r -d ./clients gs://great-unknown.appspot.com"
      ]
    }
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
